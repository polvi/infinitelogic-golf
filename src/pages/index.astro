---
import AutoRAGStream from '../components/AutoRAGStream.astro';

// Get query from URL params for streaming
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>AutoRAG Streaming Demo</title>
		<style>
			:root {
				--primary-color: #0066cc;
				--hover-color: #0052a3;
				--background-color: #ffffff;
				--text-color: #333333;
				--border-color: #ddd;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				margin: 0;
				padding: 0;
				line-height: 1.6;
				color: var(--text-color);
				background: var(--background-color);
			}

			.initial-state {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				min-height: 80vh;
				padding: 20px;
			}

			.query-state {
				padding: 20px;
			}

			.search-form-large {
				width: 100%;
				max-width: 600px;
			}

			.search-form-large input[type="text"] {
				width: 100%;
				padding: 15px;
				font-size: 18px;
				border: 2px solid var(--border-color);
				border-radius: 8px;
				margin-bottom: 15px;
			}

			.search-form-compact {
				position: sticky;
				top: 0;
				background: var(--background-color);
				padding: 10px 0;
				display: flex;
				gap: 10px;
				margin-bottom: 20px;
				z-index: 100;
				border-bottom: 1px solid var(--border-color);
			}

			.search-form-compact input[type="text"] {
				flex: 1;
				padding: 8px 12px;
				font-size: 16px;
				border: 1px solid var(--border-color);
				border-radius: 4px;
			}

			button {
				background: var(--primary-color);
				color: white;
				border: none;
				padding: 8px 20px;
				border-radius: 4px;
				cursor: pointer;
				font-size: 16px;
				transition: background-color 0.2s;
			}

			button:hover {
				background: var(--hover-color);
			}

			.response-container {
				max-width: 800px;
				margin: 0 auto;
			}

			@media (max-width: 600px) {
				.search-form-compact {
					padding: 10px;
				}
				
				.search-form-large input[type="text"] {
					font-size: 16px;
					padding: 12px;
				}
			}
		</style>
	</head>
	<body>
		{!query ? (
			<div class="initial-state">
				<h1>AutoRAG Search</h1>
				<form method="GET" action="/" class="search-form-large">
					<input type="text" name="q" id="question" placeholder="What would you like to know?" autofocus />
					<button type="submit">Search</button>
				</form>
			</div>
		) : (
			<div class="query-state">
				<form method="GET" action="/" class="search-form-compact">
					<input type="text" name="q" id="question" value={query} />
					<button type="submit">Search</button>
				</form>
				<div class="response-container">
					<AutoRAGStream query={query} />
				</div>
			</div>
		)}

	</body>
</html>
