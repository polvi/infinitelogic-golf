	<body>
		<h1>AutoRAG Streaming Demo</h1>
		<p>This demo shows streaming responses from your <code>aopa-rag</code> AutoRAG instance.</p>
		
		<div class="container">
			<button id="submit">Ask Question</button>
		</div>
		
		<div class="container">
			<h3>Response:</h3>
			<div id="response">Click "Ask Question" to see a streaming response...</div>
		</div>

		<script>
			document.addEventListener('DOMContentLoaded', function() {
				async function streamResponse() {
					const query = "What are the key topics in the knowledge base?";
					const responseDiv = document.getElementById('response');
					const submitButton = document.getElementById('submit');
					
					// Reset and show loading
					responseDiv.innerHTML = '<div class="loading">Streaming response...</div>';
					submitButton.disabled = true;
					
					try {
						const response = await fetch('/api/stream', {
							method: 'POST',
							headers: {
								'Content-Type': 'application/json',
							},
							body: JSON.stringify({ query }),
						});
						
						if (!response.ok) {
							throw new Error(`HTTP error! status: ${response.status}`);
						}
						
						// Clear loading message and create a text node for streaming
						responseDiv.innerHTML = '';
						const textNode = document.createTextNode('');
						responseDiv.appendChild(textNode);
						
						// Read the stream
						const reader = response.body?.getReader();
						const decoder = new TextDecoder();
						
						if (reader) {
							while (true) {
								const { done, value } = await reader.read();
								if (done) break;
								
								const chunk = decoder.decode(value, { stream: true });
								textNode.textContent += chunk;
								
								// Auto-scroll to bottom
								responseDiv.scrollTop = responseDiv.scrollHeight;
								
								// Force a repaint to show streaming effect
								await new Promise(resolve => setTimeout(resolve, 10));
							}
						}
					} catch (error) {
						console.error('Error:', error);
						responseDiv.innerHTML = `<div class="error">Error: ${error.message}</div>`;
					} finally {
						submitButton.disabled = false;
					}
				}
				
				// Add event listener to submit button
				document.getElementById('submit').addEventListener('click', streamResponse);
				
			});
		</script>
	</body>
